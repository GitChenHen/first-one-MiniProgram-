/* pages/me/index.wxss */

.page {
  background: gainsboro;
}

.user-card {
  background-color: #fff;
  box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.1);
  position: relative;
  padding-top: 200rpx;
  background-size: contain;
  z-index: 0;
  padding-bottom: 30rpx;
}

.user-card__bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  width: 100%;
  height: 268rpx;
  z-index: -1;
}

.user-card__head {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #6482dd;
  border-radius: 50%;
  margin-left: 7%;
  margin-right: 30rpx;
  background-color: #fff;
}

.user-card__name {
  color: #6482dd;
  font-size: 38rpx;
}

.user-card__links {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}

.user-card__linkItem {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border-right: 1px dotted #ccc;
  padding: 5rpx 0;
}

.user-card__linkItem:last-child {
  border-right: none;
}

.user-card__linkLabel {
  color: #999;
}

.user-card__linkValue {
  padding-left: 15rpx;
}

.line_5px {
  height: 25rpx;
}

.my_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 17px;
  background: white;
  border-bottom: 1px solid gainsboro;
}

.txt {
  font-size: 40rpx;
}

.tips {
  color: red;
  font-size: 36rpx;
}

.right_arrow {
  border: solid #8a8a8a;
  border-width: 0 1px 1px 0;
  padding: 5px;
  position: absolute;
  right: 15px;
  /* margin-left: 66%; */
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.button {
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px 0px;
  margin: 0px;
  line-height: 1.5;
  font-size: 40rpx;
}

.button::after {
  border: none;
}
